---
const { url, title, date } = Astro.props;

const month = date.toLocaleString("default", { month: "short" });
const year = date.getFullYear();
const dateStr = `${month} ${year}`;
---

<a href={url}>{title}</a>
<div class="date">
  {dateStr}
</div>

<style>
  li {
    padding-bottom: 10px;
    list-style-type: none;
    display: flex;
    justify-content: space-between;
  }
  a {
    margin-left: 10px;
  }
  .date {
    font-size: 0.8em;
    color: #666;
    text-align: right;
  }
</style>
