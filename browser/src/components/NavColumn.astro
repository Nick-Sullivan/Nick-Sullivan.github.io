---
const links = [
  { href: "/", text: "Home" },
  { href: "/blog", text: "Blog" },
  { href: "/projects", text: "Projects" },
  { href: "/contact", text: "Contact" },
];
---

<div class="nav-column" id="nav-column">
  <div class="nav-header">
    <button id="toggle-button">
      <i class="fa-solid fa-bars" id="expand-icon"></i>
    </button>
    <p class="nav-name">Nick Sullivan</p>
  </div>
  <nav>
    <ul>
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.text}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<script>
  const toggleButton = document.getElementById("toggle-button");
  const navColumn = document.getElementById("nav-column");
  if (toggleButton && navColumn) {
    toggleButton.addEventListener("click", function () {
      navColumn.classList.toggle("fullscreen");
    });
  }
</script>

<style>
  /* Small Screen */
  .nav-column {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #f4f4f4;
    transition: width 0.2s ease;
  }
  .nav-column.fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    background-color: #f4f4f4;
    overflow: auto;
  }
  .nav-header {
    display: flex;
    flex-direction: row;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 20px;
    padding-right: 20px;
    border-bottom: 1px solid #ddd;
  }
  .nav-name {
    display: none;
  }
  .nav-column ul {
    display: none;
  }
  .nav-column.fullscreen ul {
    display: block;
  }
  nav a {
    color: #7253ef;
    display: flex;
    text-align: left;
    width: 100%;
    border: none;
    background: none;
    padding-left: 20px;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  nav a:hover {
    background: linear-gradient(to right, #f4f4f4, #dcdcdc);
    text-decoration: none;
  }
  #toggle-button {
    border: none;
    outline: none;
    background: none;
    font-size: medium;
  }
  #toggle-button:hover i {
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  /* Large Screen */
  @media screen and (min-width: 636px) {
    .nav-column {
      display: flex;
      flex-direction: column;
      width: 200px;
      height: 100%;
      background-color: #f4f4f4;
      border-right: 1px solid #ddd;
      transition: width 0.2s ease;
      overflow: hidden;
    }
    .nav-header {
      display: flex;
      flex-direction: row;
      padding-top: 20px;
      padding-bottom: 20px;
      padding-left: 20px;
      padding-right: 20px;
      border-bottom: 1px solid #ddd;
    }
    .nav-name {
      display: block;
      flex: 1;
      font-size: large;
      text-align: center;
      white-space: nowrap;
      margin: 0;
    }
    .nav-column ul {
      list-style: none;
      padding: 0;
      width: 100%;
      display: block;
    }
    .nav-column li {
      width: 100%;
    }
    #toggle-button {
      display: none;
    }
  }
</style>
