---
const currentPath = Astro.url.pathname;
const links = [
  { href: "/", text: "Home", isActive: currentPath === "/" },
  { href: "/blog", text: "Blog", isActive: currentPath.startsWith("/blog") },
  {
    href: "/projects",
    text: "Projects",
    isActive: currentPath.startsWith("/projects"),
  },
  {
    href: "/contact",
    text: "Contact",
    isActive: currentPath.startsWith("/contact"),
  },
];
---

<div class="nav-column" id="nav-column">
  <div class="nav-header">
    <img src="/favicon.ico" alt="Favicon" class="favicon" />
    <button id="toggle-button">
      <i class="fa-solid fa-bars" id="expand-icon"></i>
    </button>
    <p class="nav-name">Nick Sullivan</p>
  </div>
  <nav class="nav-links">
    <ul>
      {
        links.map((link) => (
          <a href={link.href} class={link.isActive ? "active" : ""}>
            {link.text}
          </a>
        ))
      }
    </ul>
  </nav>
</div>

<script>
  const toggleButton = document.getElementById("toggle-button");
  const navColumn = document.getElementById("nav-column");
  if (toggleButton && navColumn) {
    toggleButton.addEventListener("click", function () {
      navColumn.classList.toggle("fullscreen");
    });
  }
</script>

<style>
  /* Small Screen */
  .nav-column {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #f4f4f4;
    transition: width 0.2s ease;
  }
  .nav-column.fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    background-color: #f4f4f4;
    overflow: auto;
  }
  .nav-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-top: 7px;
    padding-bottom: 5px;
    padding-left: 20px;
    padding-right: 20px;
    border-bottom: 1px solid #ddd;
    align-items: center;
  }
  .nav-name {
    display: none;
  }
  .favicon {
    display: block;
    width: 20px;
    height: 20px;
  }
  .nav-column ul {
    display: none;
  }
  .nav-column.fullscreen ul {
    display: block;
  }
  nav a {
    color: #7253ef;
    display: flex;
    text-align: left;
    width: 100%;
    border: none;
    background: none;
    padding-left: 20px;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  nav a:hover {
    background: linear-gradient(to right, #f4f4f4, #dcdcdc);
    text-decoration: none;
  }
  nav a.active {
    font-weight: bold;
  }
  .nav-links {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #toggle-button {
    border: none;
    outline: none;
    background: none;
    font-size: medium;
  }
  #toggle-button:hover i {
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  /* Large Screen */
  @media screen and (min-width: 636px) {
    .nav-column {
      display: flex;
      flex-direction: column;
      width: 200px;
      height: 100%;
      background-color: #f4f4f4;
      border-right: 1px solid #ddd;
      transition: width 0.2s ease;
      overflow: hidden;
    }
    .nav-header {
      display: flex;
      flex-direction: row;
      padding-top: 20px;
      padding-bottom: 20px;
      padding-left: 20px;
      padding-right: 20px;
      border-bottom: 1px solid #ddd;
      align-items: center;
    }
    .nav-name {
      display: block;
      flex: 1;
      font-size: large;
      text-align: center;
      white-space: nowrap;
      margin: 0;
    }
    .favicon {
      display: none;
    }
    .nav-column ul {
      list-style: none;
      padding: 0;
      width: 100%;
      display: block;
    }
    .nav-column li {
      width: 100%;
    }
    #toggle-button {
      display: none;
    }
  }
</style>
