---
import Header from "../components/Header.astro";
import NavColumn from "../components/NavColumn.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <Header pageTitle={pageTitle} />
  <body>
    <div class="layout-base">
      <NavColumn />
      <div class="content-outer">
        <div class="content-inner">
          <h1>{pageTitle}</h1>
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  /* Small screen */
  body {
    overflow: hidden;
  }
  .layout-base {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    height: 100vh;
    width: 100%;
  }
  .content-outer {
    display: flex;
    flex: 1;
    flex-direction: column;
    height: 100vh;
    overflow-y: auto;
    width: 100%;
    align-items: center;
    
  }
  .content-inner {
    max-width: 800px;
    width: 100%;
    box-sizing: border-box;
    padding: 40px 20px;
    margin-top: 20px;
  }
  .content-inner h1 {
    margin-top: 0;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f0f0f0;
    color: #333;
  }
  
  .footnotes {
    scroll-margin-top: 20px;
  }
  /* Big screen */
  @media screen and (min-width: 800px) {
    .layout-base {
      display: flex;
      flex-direction: row;
    }
  }
</style>
