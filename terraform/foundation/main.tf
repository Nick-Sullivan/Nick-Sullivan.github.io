terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "5.33.0"
    }
  }
  backend "s3" {
    bucket = "nicks-terraform-states"
    key    = "resume_website/website_domain/terraform.tfstate"
    region = "ap-southeast-2"
  }
}

provider "aws" {
  region = "ap-southeast-2"
  default_tags {
    tags = local.tags
  }
}

locals {
  prefix_parameter = "/WebsiteCv/production"

  tags = {
    Project     = "Website CV"
    Environment = "production"
  }
}

resource "aws_route53_delegation_set" "name_servers" {
  // Group of 4 name servers, generated by AWS. These four values must be 
  // the same for both the hosted zone and the registered domain.
  reference_name = "WebsiteDNS"
}
